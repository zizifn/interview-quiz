{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"importsNotUsedAsValues": "remove",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vitest/globals"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
