{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**"]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "outputDirectory": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/public/assets/$1"
    },
    {
      "src": "/(favicon\\.ico|robots\\.txt|manifest\\.json)",
      "dest": "client/dist/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "server/dist/index.js"
    }
  ],
  "outputDirectory": "dist"
}
